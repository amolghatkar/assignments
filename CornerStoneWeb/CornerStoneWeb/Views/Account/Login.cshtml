@model CornerStoneWeb.Models.ViewModel.LoginSignUpViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<img src="\logo\cornerstonelogo.jpg" width="100" height="100" alt="Logo" class="logo">
<h1>Login</h1>


<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded pl-5 pr-5 pb-5">
            <div class="text-center">
                <a class="text-light btn btn-primary font-weight-bold" asp-action="SignUp" asp-controller="Account">Sign Up</a>
            </div>
            <h3 class="text-success text-center">
                @TempData["SuccessMessage"]
            </h3>
            <h3 class="text-danger text-center">
                @TempData["ErrorMessage"]
            </h3>
            <form method="post" asp-action="Login" asp-controller="Account">

                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" class="form-control" autocomplete="off" placeholder="Enter User Name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input id="password" type="password" asp-for="Password" class="form-control" autocomplete="off" placeholder="Enter Password" />
                    <i id="open" class="fa-solid fa-eye float-end" style="margin-top:-25px;margin-right:6px;cursor:pointer"></i>
                    <i id="closed" class="fa-solid fa-eye-slash float-end" style="margin-top:-25px;margin-right:6px;display:none;cursor:pointer"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <input type="checkbox" asp-for="IsRemember"/>
                    <label asp-for="IsRemember"></label>
                </div>*@

                <br />
                <div class="form-group float-end">
                    <input type="submit" class="btn btn-primary btn-lg mb-2" value="Log In" />
                </div>
            </form>
           @* <div class="text-center pt-5">
                <a class="text-primary" asp-action="ForgotUserName">Forgot Username?</a>
                <a class="text-primary" asp-action="ForgotPassword">Forgot Password?</a>
            </div>*@
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function()
    {
        $("#open").click(function(){
            $("#open").hide();
            $("#closed").show();
            $("#password").attr("type", "text");

        });

        $("#closed").click(function () {
            $("#open").show();
            $("#closed").hide();
            $("#password").attr("type", "password");

        });
        
    });
</script>